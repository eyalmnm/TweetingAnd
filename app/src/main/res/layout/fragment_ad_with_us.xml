<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">


                <ImageView
                    android:id="@+id/adTitleImageView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerInside" />

                <com.em_projects.tweetings.ui.custom_text.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_green_bg_image"
                    android:gravity="center"
                    android:text="@string/ad_ad_with_us"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sign_up_check_box_title_text_size"
                    android:textStyle="bold"
                    app:custom_font="opensanshebrew-bold-webfont" />

                <com.em_projects.tweetings.ui.custom_text.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="top"
                    android:lines="4"
                    android:text="@string/ad_sub_title_text"
                    android:textColor="@color/contact_us_title_text_color"
                    app:custom_font="opensanshebrew-regular-webfont" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dialog_bg_color"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="70dp">

                <com.em_projects.tweetings.ui.custom_text.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="2"
                    android:text="@string/ad_form_title"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:custom_font="opensanshebrew-bold-webfont" />

                <com.em_projects.tweetings.ui.custom_text.CustomEditText
                    android:id="@+id/adFullNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/contact_us_edit_text_bg_color"
                    android:hint="@string/contct_us_full_name"
                    android:textColor="@color/contact_us_title_text_color"
                    android:textColorHint="@color/contact_us_title_text_color"
                    android:textSize="16dp"
                    app:custom_font="opensanshebrew-regular-webfont" />

                <com.em_projects.tweetings.ui.custom_text.CustomEditText
                    android:id="@+id/adEmailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/contact_us_edit_text_bg_color"
                    android:hint="@string/contact_us_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/contact_us_title_text_color"
                    android:textColorHint="@color/contact_us_title_text_color"
                    android:textSize="16dp"
                    app:custom_font="opensanshebrew-regular-webfont" />

                <com.em_projects.tweetings.ui.custom_text.CustomEditText
                    android:id="@+id/adSubjectEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/contact_us_edit_text_bg_color"
                    android:hint="@string/contact_us_subject"
                    android:inputType="textEmailSubject"
                    android:textColor="@color/contact_us_title_text_color"
                    android:textColorHint="@color/contact_us_title_text_color"
                    android:textSize="16dp"
                    app:custom_font="opensanshebrew-regular-webfont" />

                <com.em_projects.tweetings.ui.custom_text.CustomEditText
                    android:id="@+id/adContentEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/contact_us_edit_text_bg_color"
                    android:gravity="top"
                    android:hint="@string/contact_us_content"
                    android:lines="5"
                    android:textColor="@color/contact_us_title_text_color"
                    android:textColorHint="@color/contact_us_title_text_color"
                    android:textSize="16dp"
                    app:custom_font="opensanshebrew-regular-webfont" />

                <com.em_projects.tweetings.ui.custom_text.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/contact_us_content"
                    android:text="@string/contact_us_fields_msg"
                    android:textColor="@color/contact_us_title_text_color"
                    android:textSize="16dp"
                    app:custom_font="opensanshebrew-regular-webfont" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.em_projects.tweetings.ui.custom_text.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/ad_customers"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:custom_font="opensanshebrew-bold-webfont" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/adCustomersIcons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/ad_customer_image_view_size"
                            android:layout_height="@dimen/ad_customer_image_view_size"
                            android:background="@drawable/ad_customers_background_shap"
                            android:scaleType="centerInside"
                            android:src="@drawable/paz_icon" />

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                        <ImageView
                            android:layout_width="@dimen/ad_customer_image_view_size"
                            android:layout_height="@dimen/ad_customer_image_view_size"
                            android:background="@drawable/ad_customers_background_shap"
                            android:scaleType="centerInside"
                            android:src="@drawable/maizrachi_icon" />

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                        <ImageView
                            android:layout_width="@dimen/ad_customer_image_view_size"
                            android:layout_height="@dimen/ad_customer_image_view_size"
                            android:background="@drawable/ad_customers_background_shap"
                            android:scaleType="centerInside"
                            android:src="@drawable/rimonim_icon" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>