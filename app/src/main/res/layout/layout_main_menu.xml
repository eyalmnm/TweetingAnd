            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/contactMenuIconImageView"
            android:layout_toRightOf="@id/contactMenuIconImageView"
            android:text="@string/nav_contact"
            android:textColor="@color/app_green_text_color"
            android:textSize="17dp"
            app:custom_font="opensanshebrew-regular-webfont" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/munu_header_btn_bg_color" />

    </RelativeLayout>

    <!--Condition Menu Item-->
    <RelativeLayout
        android:id="@+id/agreementMenuItem"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/agreementMenuIconImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/agreement_menu_icon" />

        <com.em_projects.tweetings.ui.custom_text.CustomTextView
            android:id="@+id/agreementMenuTitleImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/agreementMenuIconImageView"
            android:layout_toRightOf="@id/agreementMenuIconImageView"
            android:text="@string/nav_condition"
            android:textColor="@color/app_green_text_color"
            android:textSize="17dp"
            app:custom_font="opensanshebrew-regular-webfont" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/munu_header_btn_bg_color" />

    </RelativeLayout>

    <!--Ad Menu Item-->
    <RelativeLayout
        android:id="@+id/adMenuItem"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/adMenuIconImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/ad_menu_icon" />

        <com.em_projects.tweetings.ui.custom_text.CustomTextView
            android:id="@+id/adMenuTitleImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/adMenuIconImageView"
            android:layout_toRightOf="@id/adMenuIconImageView"
            android:text="@string/nav_ad_here"
            android:textColor="@color/app_green_text_color"
            android:textSize="17dp"
            app:custom_font="opensanshebrew-regular-webfont" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/munu_header_btn_bg_color" />

    </RelativeLayout>

</LinearLayout>