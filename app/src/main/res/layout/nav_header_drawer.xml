<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="0dp">

        <com.em_projects.tweetings.ui.custom_text.CustomTextView
            android:id="@+id/headerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|start"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="2dp"
            android:text="@string/nav_header_title"
            android:textColor="#505e00"
            android:textSize="21dp"
            app:custom_font="opensanshebrew-regular-webfont" />

        <ImageButton
            android:id="@+id/closeDrawerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_1" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:id="@+id/nav_new_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.em_projects.tweetings.ui.custom_text.CustomButton
                android:id="@+id/navLoginButton"
                android:layout_width="@dimen/main_menu_button_width"
                android:layout_height="wrap_content"
                android:background="@color/munu_header_btn_bg_color"
                android:drawableStart="@drawable/shape_4_a"
                android:drawablePadding="-1dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/nav_connect"
                android:textColor="@color/app_green_text_color"
                android:textSize="17dp"
                app:custom_font="opensanshebrew-regular-webfont" />

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <com.em_projects.tweetings.ui.custom_text.CustomButton
                android:id="@+id/navRegisterButton"
                android:layout_width="@dimen/main_menu_button_width"
                android:layout_height="wrap_content"
                android:background="@color/munu_header_btn_bg_color"
                android:drawableStart="@drawable/shape_3"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/nav_register"
                android:textColor="@color/app_green_text_color"
                android:textSize="17dp"
                app:custom_font="opensanshebrew-regular-webfont" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_exist_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.em_projects.tweetings.ui.custom_text.CustomButton
                android:id="@+id/navPersonalButton"
                android:layout_width="@dimen/main_menu_button_width"
                android:layout_height="wrap_content"
                android:background="@color/munu_header_btn_bg_color"
                android:drawableStart="@drawable/shape_7_copy"
                android:drawablePadding="-1dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/nav_personal"
                android:textColor="@color/app_green_text_color"
                android:textSize="17dp"
                android:typeface="sans"
                app:custom_font="opensanshebrew-regular-webfont" />

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <com.em_projects.tweetings.ui.custom_text.CustomButton
                android:id="@+id/navLogoutButton"
                android:layout_width="@dimen/main_menu_button_width"
                android:layout_height="wrap_content"
                android:background="@color/munu_header_btn_bg_color"
                android:drawableStart="@drawable/shape_4"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/nav_disconnect"
                android:textColor="@color/app_green_text_color"
                android:textSize="17dp"
                app:custom_font="opensanshebrew-regular-webfont" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
