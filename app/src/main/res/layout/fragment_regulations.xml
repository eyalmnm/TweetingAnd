<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp">


    <com.em_projects.tweetings.ui.custom_text.CustomTextView
        android:id="@+id/regulationsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/regulation_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:custom_font="opensanshebrew-bold-webfont" />

    <com.em_projects.tweetings.ui.custom_text.CustomTextView
        android:id="@+id/regulationsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regulationsTitle"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:text="@string/regulation_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:custom_font="opensanshebrew-regular-webfont" />

</RelativeLayout>